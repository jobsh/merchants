<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.merchant.system.mapper.CustomerMapper">
    
    <resultMap type="Customer" id="CustomerResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="level"    column="level"    />
        <result property="companyId"    column="company_id"    />
        <result property="province"    column="province"    />
        <result property="city"    column="city"    />
        <result property="genjinStatus"    column="genjin_status"    />
        <result property="resource"    column="resource"    />
        <result property="sysUserId"    column="sys_user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCustomerVo">
        select id, xiansuo_id, name, phone, level, company_id, province, city, genjin_status, resource, sys_user_id, create_time, update_time from biz_customer
    </sql>

    <select id="selectCustomerList" parameterType="Customer" resultMap="CustomerResult">
        <include refid="selectCustomerVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="level != null "> and level = #{level}</if>
            <if test="companyId != null "> and company_id = #{companyId}</if>
            <if test="province != null  and province != ''"> and province = #{province}</if>
            <if test="city != null  and city != ''"> and city = #{city}</if>
            <if test="genjinStatus != null "> and genjin_status = #{genjinStatus}</if>
            <if test="resource != null  and resource != ''"> and resource = #{resource}</if>
            <if test="sysUserId != null "> and sys_user_id = #{sysUserId}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
            <if test="updateTime != null "> and update_time = #{updateTime}</if>
        </where>
    </select>
    
    <select id="selectCustomerById" parameterType="Integer" resultMap="CustomerResult">
        <include refid="selectCustomerVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCustomer" parameterType="Customer" useGeneratedKeys="true" keyProperty="id">
        insert into biz_customer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="xiansuoId != null">xiansuo_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="level != null">level,</if>
            <if test="companyId != null">company_id,</if>
            <if test="province != null and province != ''">province,</if>
            <if test="city != null and city != ''">city,</if>
            <if test="genjinStatus != null">genjin_status,</if>
            <if test="resource != null and resource != ''">resource,</if>
            <if test="sysUserId != null">sys_user_id,</if>
            create_time,
            update_time,
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="xiansuoId != null">#{xiansuoId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="level != null">#{level},</if>
            <if test="companyId != null">#{companyId},</if>
            <if test="province != null and province != ''">#{province},</if>
            <if test="city != null and city != ''">#{city},</if>
            <if test="genjinStatus != null">#{genjinStatus},</if>
            <if test="resource != null and resource != ''">#{resource},</if>
            <if test="sysUserId != null">#{sysUserId},</if>
            now(),
            now()
         </trim>
    </insert>

    <update id="updateCustomer" parameterType="Customer">
        update biz_customer
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="level != null">level = #{level},</if>
            <if test="companyId != null">company_id = #{companyId},</if>
            <if test="province != null and province != ''">province = #{province},</if>
            <if test="city != null and city != ''">city = #{city},</if>
            <if test="genjinStatus != null">genjin_status = #{genjinStatus},</if>
            <if test="resource != null and resource != ''">resource = #{resource},</if>
            <if test="sysUserId != null">sys_user_id = #{sysUserId},</if>
            update_time = now()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCustomerById" parameterType="Integer">
        delete from biz_customer where id = #{id}
    </delete>

    <delete id="deleteCustomerByIds" parameterType="String">
        delete from biz_customer where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 认领线索为客户时去重 -->
    <delete id="deleteCustomerByPhoneAndStatus" parameterType="Integer">
        delete from biz_customer where status = 0 and phone= #{phone}
    </delete>

</mapper>